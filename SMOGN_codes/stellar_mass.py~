import pandas as pd
import smogn

#Loading data
df = pd.read_csv('../without_some_cuts-IllustrixTNG300_environment.csv')
df = df.sample(frac = 1, random_state = 42)
df = df.reset_index(drop=True)

#Choosing data
total = len(df)
p_train = 3/5
p_test = 2/5

df_1 = df.iloc[:int(p_train*total), :]
df_2 = df.iloc[int(p_train*total):, :]
df_1 = df_1.reset_index(drop=True)
df_2 = df_2.reset_index(drop=True)

df_s = smogn.smoter(data = df_1, y = "stellar_mass")

df_s.to_csv('stellar_mass-smoogn_data.csv')
